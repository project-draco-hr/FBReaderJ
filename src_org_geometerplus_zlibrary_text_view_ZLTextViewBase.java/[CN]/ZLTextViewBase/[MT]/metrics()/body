{
  ZLTextMetrics m=myMetrics;
  if (m == null) {
    final ZLTextStyleCollection collection=getTextStyleCollection();
    final ZLTextBaseStyle base=collection.getBaseStyle();
    m=new ZLTextMetrics(ZLibrary.Instance().getDisplayDPI(),collection.getDefaultFontSize(),base.getFontSize(),base.getFontSize() * 15 / 10,100,100);
    myMetrics=m;
  }
  return m;
}
