{
  if (book.getEncodingNoDetection() == null) {
    try {
      BookUtil.getPlugin(book).detectLanguageAndEncoding(book);
    }
 catch (    BookReadingException e) {
    }
    if (book.getEncodingNoDetection() == null) {
      book.setEncoding("utf-8");
    }
  }
  return book.getEncodingNoDetection();
}
