{
switch (event) {
default :
    break;
case BookmarkStyleChanged:
  updateStyles();
myAllBooksAdapter.notifyDataSetChanged();
myThisBookAdapter.notifyDataSetChanged();
if (mySearchResultsAdapter != null) {
mySearchResultsAdapter.notifyDataSetChanged();
}
break;
case BookmarksUpdated:
updateBookmarks();
break;
}
}
