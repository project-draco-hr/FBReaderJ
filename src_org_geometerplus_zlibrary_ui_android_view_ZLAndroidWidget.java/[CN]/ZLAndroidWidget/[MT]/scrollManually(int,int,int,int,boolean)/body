{
  final int shift=horizontally ? endX - startX : endY - startY;
  final int viewPage=horizontally ? (shift < 0 ? ZLView.PAGE_RIGHT : ZLView.PAGE_LEFT) : (shift < 0 ? ZLView.PAGE_BOTTOM : ZLView.PAGE_TOP);
  if (myMainBitmap == null) {
    return;
  }
  if ((shift > 0 && myScrollingShift <= 0) || (shift < 0 && myScrollingShift >= 0)) {
    mySecondaryBitmapIsUpToDate=false;
  }
  myScrollingShift=shift;
  setPageToScroll(viewPage);
  drawOnBitmap(mySecondaryBitmap);
  postInvalidate();
}
