{
  Cursor cursor=database().query(true,ourTableName,ourColumns,"groupName='" + group + "' AND name='"+ name+ "'",ourSelectionArgs,null,null,null,null);
  String answer=defaultValue;
  if (cursor.getCount() != 0) {
    cursor.moveToFirst();
    answer=cursor.getString(0);
  }
  cursor.close();
  return answer;
}
