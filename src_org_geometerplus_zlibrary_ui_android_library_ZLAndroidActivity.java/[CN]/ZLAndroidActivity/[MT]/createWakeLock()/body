{
  if (myWakeLockToCreate) {
synchronized (this) {
      if (myWakeLockToCreate) {
        myWakeLockToCreate=false;
        myWakeLock=((PowerManager)getSystemService(POWER_SERVICE)).newWakeLock(PowerManager.SCREEN_BRIGHT_WAKE_LOCK,"FBReader");
        myWakeLock.acquire();
      }
    }
  }
  if (myStartTimer) {
    ZLApplication.Instance().startTimer();
    myStartTimer=false;
  }
}
