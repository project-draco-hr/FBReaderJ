{
  Object[] options=new Object[3];
  int size=0;
  if (button0 != null) {
    options[size++]=getButtonText(button0).replace("&","");
  }
  if (button1 != null) {
    options[size++]=getButtonText(button1).replace("&","");
  }
  if (button2 != null) {
    options[size++]=getButtonText(button2).replace("&","");
  }
  int optionType;
  Object[] opt=new Object[size];
  System.arraycopy(options,0,opt,0,size);
switch (size) {
case 3:
    optionType=JOptionPane.YES_NO_CANCEL_OPTION;
  break;
case 2:
optionType=JOptionPane.YES_NO_OPTION;
break;
case 1:
optionType=JOptionPane.YES_OPTION;
break;
default :
return 0;
}
return JOptionPane.showOptionDialog(myApplicationWindow.getFrame(),message,getDialogTitle(key),optionType,JOptionPane.QUESTION_MESSAGE,null,opt,opt[0]);
}
