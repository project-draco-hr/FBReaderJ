{
  final boolean hasBuyReference=this.reference(BookReference.Type.BUY) != null || this.reference(BookReference.Type.BUY_IN_BROWSER) != null;
  for (  BookReference ref : myReferences) {
    final int type=ref.ReferenceType;
    if (type == BookReference.Type.DOWNLOAD_FULL || type == BookReference.Type.DOWNLOAD_FULL_CONDITIONAL || (!hasBuyReference && type == BookReference.Type.DOWNLOAD_FULL_OR_DEMO)) {
      String fileName=ref.localCopyFileName();
      if (fileName != null) {
        new File(fileName).delete();
      }
    }
  }
}
