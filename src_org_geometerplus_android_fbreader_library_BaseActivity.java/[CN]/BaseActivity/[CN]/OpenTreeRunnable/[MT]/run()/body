{
  if (myTree.getOpeningStatus() == LibraryTree.Status.WAIT_FOR_OPEN) {
    UIUtil.runWithMessage(BaseActivity.this,myTree.getOpeningStatusMessage(),new Runnable(){
      public void run(){
        myTree.waitForOpening();
      }
    }
,new Runnable(){
      public void run(){
        openTree();
      }
    }
);
  }
 else {
    openTree();
  }
}
