{
switch (myTree.getOpeningStatus()) {
case WAIT_FOR_OPEN:
case ALWAYS_RELOAD_BEFORE_OPENING:
    final String messageKey=myTree.getOpeningStatusMessage();
  if (messageKey != null) {
    UIUtil.runWithMessage(BaseActivity.this,messageKey,new Runnable(){
      public void run(){
        myTree.waitForOpening();
      }
    }
,new Runnable(){
      public void run(){
        openTree();
      }
    }
);
  }
 else {
    myTree.waitForOpening();
    openTree();
  }
break;
default :
openTree();
break;
}
}
