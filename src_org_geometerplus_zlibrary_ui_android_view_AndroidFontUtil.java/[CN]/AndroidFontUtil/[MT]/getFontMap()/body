{
  if (ourFontMap == null) {
    if (ourFontCreationMethod == null) {
      ourFontMap=new HashMap<String,File[]>();
    }
 else {
      ourFontMap=new ZLTTFInfoDetector().collectFonts(new File(Paths.FontsDirectoryOption().getValue()).listFiles(new FilenameFilter(){
        public boolean accept(        File dir,        String name){
          return name.toLowerCase().endsWith(".ttf") && !name.startsWith(".");
        }
      }
));
    }
  }
  return ourFontMap;
}
