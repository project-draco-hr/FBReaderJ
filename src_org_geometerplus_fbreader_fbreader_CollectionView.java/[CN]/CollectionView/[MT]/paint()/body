{
  if ((myShowTags != ShowTagsOption.getValue()) || (myShowAllBooksList != ShowAllBooksTagOption.getValue())) {
    myShowTags=ShowTagsOption.getValue();
    myShowAllBooksList=ShowAllBooksTagOption.getValue();
    myUpdateModel=true;
  }
  if (myUpdateModel) {
    ZLTextModel oldModel=getModel();
    setModel(null);
    ((CollectionModel)oldModel).update();
    setModel(oldModel);
    myUpdateModel=false;
  }
  super.paint();
}
