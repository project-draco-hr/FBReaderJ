{
  File file=new File(path);
  try {
    PrintWriter pw=new PrintWriter(file,"UTF-8");
    try {
      pw.write(content);
    }
  finally {
      pw.close();
    }
  }
 catch (  FileNotFoundException fnfException) {
  }
catch (  UnsupportedEncodingException e) {
    System.out.println(e.getMessage());
  }
}
