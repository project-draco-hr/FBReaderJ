{
synchronized (myHolder) {
    try {
      if (myHolder.coverSyncRunnable != this)       return;
      if (myHolder.key != myKey || myHolder.tree != myTree)       return;
      if (!myImage.isSynchronized())       return;
      if (myCachedBitmaps.containsKey(myHolder.key))       return;
      final ZLAndroidImageManager mgr=(ZLAndroidImageManager)ZLAndroidImageManager.Instance();
      final ZLAndroidImageData data=mgr.getImageData(myImage);
      if (data == null)       return;
      getActivity().runOnUiThread(new Runnable(){
        @Override public void run(){
synchronized (myHolder) {
            if (myHolder.key != myKey || myHolder.tree != myTree)             return;
            startUpdateCover(myHolder,myImage,myWidth,myHeight);
          }
        }
      }
);
    }
  finally {
      if (myHolder.coverSyncRunnable == this)       myHolder.coverSyncRunnable=null;
    }
  }
}
