{
  super.onStart();
  final Book book=Book.getByFile(myFile);
  if (book != null) {
    setupCover(book);
    setupBookInfo(book);
    setupAnnotation(book);
    setupFileInfo(book);
  }
  if (myHideOpenButton) {
    findButton(R.id.book_info_button_open).setVisibility(View.GONE);
  }
 else {
    setupButton(R.id.book_info_button_open,"openBook",new View.OnClickListener(){
      public void onClick(      View view){
        startActivity(new Intent(getApplicationContext(),FBReader.class).setAction(Intent.ACTION_VIEW).putExtra(FBReader.BOOK_PATH_KEY,myFile.getPath()).addFlags(Intent.FLAG_ACTIVITY_CLEAR_TOP));
      }
    }
);
  }
  setupButton(R.id.book_info_button_edit,"editInfo",new View.OnClickListener(){
    public void onClick(    View view){
      startActivityForResult(new Intent(getApplicationContext(),EditBookInfoActivity.class).putExtra(CURRENT_BOOK_PATH_KEY,myFile.getPath()),1);
    }
  }
);
  setupButton(R.id.book_info_button_reload,"reloadInfo",new View.OnClickListener(){
    public void onClick(    View view){
      if (book != null) {
        book.reloadInfoFromFile();
        setupBookInfo(book);
      }
    }
  }
);
  final View root=findViewById(R.id.book_info_root);
  root.invalidate();
  root.requestLayout();
}
