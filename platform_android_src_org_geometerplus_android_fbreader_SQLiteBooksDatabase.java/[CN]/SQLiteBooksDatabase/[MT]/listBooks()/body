{
  final Cursor cursor=myDatabase.rawQuery("SELECT Authors.name,Authors.sort_key,Books.title,Books.language,Books.encoding,Books.file_name FROM Books LEFT JOIN BookAuthor ON Books.book_id = BookAuthor.book_id LEFT JOIN Authors ON Authors.author_id = BookAuthor.author_id ORDER by Books.file_name",null);
  while (cursor.moveToNext()) {
    System.err.println(cursor.getString(0) + ":" + cursor.getString(2));
  }
  cursor.close();
}
