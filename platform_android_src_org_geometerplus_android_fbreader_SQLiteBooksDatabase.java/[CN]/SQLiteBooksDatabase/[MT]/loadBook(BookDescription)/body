{
  final Cursor cursor=myDatabase.query(BOOKS_TABLE,BOOKS_COLUMNS,FILE_NAME_CONDITION,new String[]{description.File.getPath()},null,null,null,null);
  long id=-1;
  if (cursor.moveToNext()) {
    id=cursor.getLong(0);
    description.setEncoding(cursor.getString(1));
    description.setLanguage(cursor.getString(2));
    description.setTitle(cursor.getString(3));
  }
  cursor.close();
  return id;
}
