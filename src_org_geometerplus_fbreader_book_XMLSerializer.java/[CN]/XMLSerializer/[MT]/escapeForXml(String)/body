{
  if (data.indexOf('&') != -1) {
    data=data.replaceAll("&","&amp;");
  }
  if (data.indexOf('<') != -1) {
    data=data.replaceAll("<","&lt;");
  }
  if (data.indexOf('>') != -1) {
    data=data.replaceAll(">","&gt;");
  }
  if (data.indexOf('\'') != -1) {
    data=data.replaceAll("'","&apos;");
  }
  if (data.indexOf('"') != -1) {
    data=data.replaceAll("\"","&quot;");
  }
  return data;
}
