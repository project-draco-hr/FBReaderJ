{
  final StringBuilder buffer=new StringBuilder();
  final ZLColor bgColor=style.getBackgroundColor();
  final ZLColor fgColor=style.getForegroundColor();
  appendTag(buffer,"style",true,"id",String.valueOf(style.Id),"name",style.getName(),"bg-color",bgColor != null ? String.valueOf(bgColor.intValue()) : "-1","fg-color",fgColor != null ? String.valueOf(fgColor.intValue()) : "-1");
  return buffer.toString();
}
