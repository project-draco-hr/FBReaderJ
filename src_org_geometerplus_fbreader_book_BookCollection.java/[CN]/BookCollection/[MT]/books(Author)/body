{
  final boolean isNull=Author.NULL.equals(author);
  final LinkedList<Book> filtered=new LinkedList<Book>();
  for (  Book b : books()) {
    final List<Author> bookAuthors=b.authors();
    if (isNull && bookAuthors.isEmpty() || bookAuthors.contains(author)) {
      filtered.add(b);
    }
  }
  return filtered;
}
