{
  try {
    for (    ZLFile file : myFile.children()) {
      if (Thread.currentThread().isInterrupted()) {
        break;
      }
      if (file.isDirectory() || file.isArchive() || PluginCollection.Instance().getPlugin(file) != null) {
        final FileListAdapter adapter=(FileListAdapter)getListAdapter();
        adapter.add(new FileItem(file));
        runOnUiThread(new Runnable(){
          public void run(){
            adapter.notifyDataSetChanged();
          }
        }
);
      }
    }
  }
 catch (  Exception e) {
    runOnUiThread(new Runnable(){
      public void run(){
        Toast.makeText(FileManager.this,myResource.getResource("permissionDenied").getValue(),Toast.LENGTH_SHORT).show();
      }
    }
);
    finish();
  }
}
