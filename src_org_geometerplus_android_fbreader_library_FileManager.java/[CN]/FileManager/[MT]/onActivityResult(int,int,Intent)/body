{
  if (requestCode == CHILD_LIST_REQUEST && returnCode == RESULT_DO_INVALIDATE_VIEWS) {
    if (myPath != null) {
      getListAdapter().clear();
      startUpdate();
    }
    getListView().invalidateViews();
    setResult(RESULT_DO_INVALIDATE_VIEWS);
  }
 else   if (requestCode == BOOK_INFO_REQUEST) {
    getListView().invalidateViews();
  }
}
