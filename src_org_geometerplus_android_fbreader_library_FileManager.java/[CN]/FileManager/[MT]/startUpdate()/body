{
  final FileItem parent=new FileItem(myFile);
  new Thread(new Runnable(){
    public void run(){
      parent.update();
      getListAdapter().addAll(parent.subTrees());
      runOnUiThread(new Runnable(){
        public void run(){
          setSelection(getListAdapter().getFirstSelectedItemIndex());
        }
      }
);
    }
  }
).start();
}
