{
  new Thread(new Runnable(){
    public void run(){
      ((FileItem)myCurrentTree).update();
      getListAdapter().addAll(myCurrentTree.subTrees());
      runOnUiThread(new Runnable(){
        public void run(){
          setSelection(getListAdapter().getFirstSelectedItemIndex());
        }
      }
);
    }
  }
).start();
}
