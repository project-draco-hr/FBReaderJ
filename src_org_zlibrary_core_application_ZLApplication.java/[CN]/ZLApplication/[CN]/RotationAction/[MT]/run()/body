{
  int optionValue=(int)myApplication.RotationAngleOption.getValue();
  ZLViewWidget.Angle oldAngle=myApplication.myViewWidget.getRotation();
  ZLViewWidget.Angle newAngle=ZLViewWidget.Angle.DEGREES0;
  if (optionValue == -1) {
switch (oldAngle) {
case DEGREES0:
      newAngle=ZLViewWidget.Angle.DEGREES90;
    break;
case DEGREES90:
  newAngle=ZLViewWidget.Angle.DEGREES180;
break;
case DEGREES180:
newAngle=ZLViewWidget.Angle.DEGREES270;
break;
case DEGREES270:
newAngle=ZLViewWidget.Angle.DEGREES0;
break;
}
}
 else {
newAngle=(oldAngle == ZLViewWidget.Angle.DEGREES0) ? ZLViewWidget.Angle.getByDegrees(optionValue) : ZLViewWidget.Angle.DEGREES0;
}
myApplication.myViewWidget.rotate(newAngle);
myApplication.AngleStateOption.setValue(newAngle.getDegrees());
myApplication.refreshWindow();
}
