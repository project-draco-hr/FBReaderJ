{
  if (element instanceof ZLTextWord) {
    if (myWordHeight == -1) {
      myWordHeight=(int)(getContext().getStringHeight() * myTextStyle.lineSpace()) + myTextStyle.verticalShift();
    }
    return myWordHeight;
  }
 else   if (element instanceof ZLTextImageElement) {
    return getContext().imageHeight(((ZLTextImageElement)element).getImage()) + Math.max((int)(getContext().getStringHeight() * (myTextStyle.lineSpace() - 1)),3);
  }
  return 0;
}
