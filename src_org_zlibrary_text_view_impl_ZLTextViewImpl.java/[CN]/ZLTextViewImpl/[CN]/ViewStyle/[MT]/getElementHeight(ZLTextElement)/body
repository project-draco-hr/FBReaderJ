{
  if (element instanceof ZLTextWord) {
    if (myWordHeight == -1) {
      myWordHeight=(int)(myContext.getStringHeight() * myStyle.lineSpace()) + myStyle.verticalShift();
    }
    return myWordHeight;
  }
 else   if (element instanceof ZLTextImageElement) {
    return myContext.imageHeight(((ZLTextImageElement)element).getImage()) + Math.max(myContext.getStringHeight() * (myStyle.lineSpace() - 1),3);
  }
  return 0;
}
