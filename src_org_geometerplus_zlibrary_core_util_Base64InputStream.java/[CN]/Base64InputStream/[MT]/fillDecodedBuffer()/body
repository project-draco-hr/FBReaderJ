{
  int first=-1;
  int second=-1;
  int third=-1;
  int fourth=-1;
  main:   while (myBufferLength >= 0) {
    while (myBufferLength-- > 0) {
      final int digit=decode(myBuffer[myBufferOffset++]);
      if (digit != -1) {
        if (first == -1) {
          first=digit;
        }
 else         if (second == -1) {
          second=digit;
        }
 else         if (third == -1) {
          third=digit;
        }
 else {
          fourth=digit;
          break main;
        }
      }
    }
    fillBuffer();
  }
  if (first != -1) {
    myDecodedBuffer[0]=(first << 2) | (second >> 4);
    myDecodedBuffer[1]=0xFF & ((second << 4) | (third >> 2));
    myDecodedBuffer[2]=0xFF & ((third << 6) | fourth);
  }
}
