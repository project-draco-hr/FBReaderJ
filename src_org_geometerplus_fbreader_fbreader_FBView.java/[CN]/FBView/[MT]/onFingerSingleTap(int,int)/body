{
  if (super.onFingerSingleTap(x,y)) {
    return true;
  }
  final ZLTextRegion region=findRegion(x,y,MAX_SELECTION_DISTANCE,ZLTextRegion.HyperlinkFilter);
  if (region != null) {
    selectRegion(region);
    myReader.getViewWidget().reset();
    myReader.getViewWidget().repaint();
    myReader.doAction(ActionCode.PROCESS_HYPERLINK);
    return true;
  }
  myReader.doAction(getZoneMap().getActionByCoordinates(x,y,myContext.getWidth(),myContext.getHeight(),isDoubleTapSupported() ? TapZoneMap.Tap.singleNotDoubleTap : TapZoneMap.Tap.singleTap),x,y);
  return true;
}
