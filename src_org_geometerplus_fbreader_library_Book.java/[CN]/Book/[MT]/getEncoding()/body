{
  if (myEncoding == null) {
    try {
      System.err.println("detect encoding for " + getId());
      getPlugin().detectLanguageAndEncoding(this);
      System.err.println("detected encoding for " + getId() + " = "+ myEncoding);
    }
 catch (    BookReadingException e) {
    }
    if (myEncoding == null) {
      setEncoding("utf-8");
    }
  }
  return myEncoding;
}
