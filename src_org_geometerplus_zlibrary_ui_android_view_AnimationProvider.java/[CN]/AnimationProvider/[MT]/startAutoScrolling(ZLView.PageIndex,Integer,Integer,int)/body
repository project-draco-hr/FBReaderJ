{
  terminate();
  myMode=Mode.AutoScrollingForward;
switch (myDirection) {
case up:
case rightToLeft:
    mySpeed=pageIndex == ZLView.PageIndex.next ? -15 : 15;
  break;
case leftToRight:
case down:
mySpeed=pageIndex == ZLView.PageIndex.next ? 15 : -15;
break;
}
setupAutoScrollingStart(x,y);
startAutoScrollingInternal(speed);
}
