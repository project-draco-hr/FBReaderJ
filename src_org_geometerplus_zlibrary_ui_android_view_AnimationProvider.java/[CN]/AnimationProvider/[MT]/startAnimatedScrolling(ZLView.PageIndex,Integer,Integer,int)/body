{
  if (myMode.Auto) {
    return;
  }
  terminate();
  myMode=Mode.AnimatedScrollingForward;
switch (myDirection) {
case up:
case rightToLeft:
    mySpeed=pageIndex == ZLView.PageIndex.next ? -15 : 15;
  break;
case leftToRight:
case down:
mySpeed=pageIndex == ZLView.PageIndex.next ? 15 : -15;
break;
}
setupAnimatedScrollingStart(x,y);
startAnimatedScrollingInternal(speed);
}
