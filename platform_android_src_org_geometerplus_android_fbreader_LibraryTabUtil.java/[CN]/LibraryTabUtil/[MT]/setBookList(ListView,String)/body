{
  ZLListAdapterImpl adapter=new ZLListAdapterImpl(view.getContext(),new Runnable(){
    public void run(){
      setTagList(view,tag);
    }
  }
);
  for (  BookDescription book : BookCollection.Instance().booksByTag(tag)) {
    adapter.addItem(new BookItem(book));
  }
  setAdapter(view,adapter);
}
