{
  if (myDoRebuild) {
    myCollectionByAuthor.clear();
    myCollectionByTag.clear();
    ZLConfig.Instance().executeAsATransaction(new Runnable(){
      public void run(){
        build();
      }
    }
);
    myCollectionByAuthor.sortAllChildren();
    myCollectionByTag.sortAllChildren();
    myDoRebuild=false;
  }
}
