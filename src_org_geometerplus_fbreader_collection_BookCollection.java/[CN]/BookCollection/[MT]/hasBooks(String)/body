{
  synchronize();
  final ArrayList books=myBooks;
  final int len=books.size();
  for (int i=0; i < len; ++i) {
    final ArrayList tags=((BookDescription)books.get(i)).getTags();
    final int tagsLen=tags.size();
    for (int j=0; j < tagsLen; ++j) {
      if (tag.equals(tags.get(j))) {
        return true;
      }
    }
  }
  return false;
}
