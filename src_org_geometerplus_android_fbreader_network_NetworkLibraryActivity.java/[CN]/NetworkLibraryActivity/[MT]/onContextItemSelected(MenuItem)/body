{
  final int position=((AdapterView.AdapterContextMenuInfo)item.getMenuInfo()).position;
  final NetworkTree tree=(NetworkTree)getListAdapter().getItem(position);
  if (tree != null) {
    final List<? extends Action> actions=tree instanceof NetworkBookTree ? NetworkBookActions.getContextMenuActions(this,((NetworkBookTree)tree).Book,Connection) : myContextMenuActions;
    for (    Action a : actions) {
      if (a.Code == item.getItemId()) {
        runAction(a,tree);
        return true;
      }
    }
  }
  return super.onContextItemSelected(item);
}
