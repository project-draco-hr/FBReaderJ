{
  if (x != null) {
    if (x < w / 2) {
      x=Math.min(x,w / 5);
    }
 else {
      x=Math.max(x,4 * w / 5);
    }
  }
  if (y != null) {
    if (y < h / 2) {
      y=Math.min(y,h / 5);
    }
 else {
      y=Math.max(y,4 * h / 5);
    }
  }
  if (x == null && y == null) {
    if (direction.IsHorizontal) {
      x=speed < 0 ? w - 3 : 3;
      y=1;
    }
 else {
      x=1;
      y=speed < 0 ? h - 3 : 3;
    }
  }
  super.startAutoScrolling(forward,speed,direction,w,h,x,y);
}
