{
  final ZLAndroidDialogManager dialogManager=(ZLAndroidDialogManager)ZLAndroidDialogManager.getInstance();
  Runnable action=new Runnable(){
    public void run(){
      BookCollection collection=BookCollection.Instance();
      collection.rebuild();
      collection.synchronize();
      RecentBooks recentBooks=RecentBooks.Instance();
      recentBooks.rebuild();
      recentBooks.synchronize();
      dialogManager.runActivity(LibraryTabActivity.class);
    }
  }
;
  dialogManager.wait("loadingBookList",action);
}
