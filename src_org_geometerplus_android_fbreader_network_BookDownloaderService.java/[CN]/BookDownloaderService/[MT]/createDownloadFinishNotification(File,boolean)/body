{
  final String tickerText=success ? "Book has been downloaded" : "Book download error";
  final String contentText=success ? "Download successful" : "Download unsuccessful";
  final Notification notification=new Notification(android.R.drawable.stat_sys_download_done,tickerText,System.currentTimeMillis());
  notification.flags|=Notification.FLAG_AUTO_CANCEL;
  final Intent intent=getFBReaderIntent(success ? file : null);
  final PendingIntent contentIntent=PendingIntent.getActivity(this,0,intent,0);
  notification.setLatestEventInfo(getApplicationContext(),file.getName(),contentText,contentIntent);
  return notification;
}
