{
  if (tag.length() != 0) {
    String[] tags=tag.split(",");
    if (position < 0) {
      for (      String s : tags) {
        s=s.trim();
        if (!myEditList.contains(s) && s.matches("[A-Za-z0-9_\\- ]*")) {
          myEditList.add(s);
        }
      }
    }
 else {
      String s=tags[0].trim();
      if (s.matches("[A-Za-z0-9_\\- ]*")) {
        myEditList.set(position,s);
      }
    }
    ((BaseAdapter)getListAdapter()).notifyDataSetChanged();
  }
}
