{
  final FontEntry entry=Entries.get(family);
  if (entry == null) {
    return null;
  }
{
    final int index=(bold ? 1 : 0) + (italic ? 2 : 0);
    final Typeface tf=getOrCreateTypeface(entry,family,bold,italic);
    if (tf != null) {
      return tf;
    }
  }
  for (int i=0; i < 4; ++i) {
    final Typeface tf=getOrCreateTypeface(entry,family,(i & 1) == 1,(i & 2) == 2);
    if (tf != null) {
      return tf;
    }
  }
  return null;
}
