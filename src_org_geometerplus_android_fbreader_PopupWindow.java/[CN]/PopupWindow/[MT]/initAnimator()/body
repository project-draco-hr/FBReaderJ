{
  myEndShowListener=new AnimatorListenerAdapter(){
    @Override public void onAnimationEnd(    Animator animator){
      myShowHideAnimator=null;
      requestLayout();
    }
  }
;
  myEndHideListener=new AnimatorListenerAdapter(){
    @Override public void onAnimationEnd(    Animator animator){
      myShowHideAnimator=null;
      setVisibility(View.GONE);
    }
  }
;
}
