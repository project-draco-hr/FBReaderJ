{
  myCursorCache.clear();
  mySelection.clear();
  myHighlightings.clear();
  myModel=model;
  myCurrentPage.reset();
  myPreviousPage.reset();
  myNextPage.reset();
  if (myModel != null) {
    final int paragraphsNumber=myModel.getParagraphsNumber();
    if (paragraphsNumber > 0) {
      myCurrentPage.moveStartCursor(cursor(0));
    }
  }
  Application.getViewWidget().reset();
}
