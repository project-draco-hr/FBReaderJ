{
  if (ATOMConstants.TYPE_XHTML.equals(myTextType) || MimeType.TEXT_XHTML.Name.equals(myTextType)) {
    if (closeTag) {
      myTextContent.append("</").append(tag).append(">");
    }
 else {
      StringBuilder buffer=new StringBuilder("<").append(tag);
      for (int i=0; i < attributes.getSize(); ++i) {
        final String key=attributes.getKey(i);
        final String value=attributes.getValue(key);
        buffer.append(" ").append(key).append("=\"");
        if (value != null) {
          buffer.append(value);
        }
        buffer.append("\"");
      }
      buffer.append(" >");
      myTextContent.append(buffer.toString());
    }
  }
}
