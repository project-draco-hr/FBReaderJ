{
  if (myReversedX) {
    ++x0;
    ++x1;
  }
  if (myReversedY) {
    ++y0;
    ++y1;
  }
  final Paint paint=Paint;
  final Canvas canvas=myCanvas;
  paint.setAntiAlias(false);
  canvas.drawLine(x0,y0,x1,y1,paint);
  canvas.drawPoint(x0,y0,paint);
  canvas.drawPoint(x1,y1,paint);
  paint.setAntiAlias(true);
}
