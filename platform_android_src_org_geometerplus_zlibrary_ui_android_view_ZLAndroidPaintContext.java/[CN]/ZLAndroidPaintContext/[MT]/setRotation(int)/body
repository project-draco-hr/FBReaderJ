{
switch (rotation) {
case ZLViewWidget.Angle.DEGREES0:
    myReversedX=false;
  myReversedY=false;
break;
case ZLViewWidget.Angle.DEGREES90:
myReversedX=true;
myReversedY=false;
break;
case ZLViewWidget.Angle.DEGREES180:
myReversedX=true;
myReversedY=true;
break;
case ZLViewWidget.Angle.DEGREES270:
myReversedX=false;
myReversedY=true;
break;
}
}
