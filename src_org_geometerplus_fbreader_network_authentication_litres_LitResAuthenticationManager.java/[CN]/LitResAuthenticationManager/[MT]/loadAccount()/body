{
  final String sid=mySidOption.getValue();
  final String query="pages/purchase_book/";
  final LitResNetworkRequest request=new LitResNetworkRequest(LitResUtil.url(Link,query),new LitResPurchaseXMLReader(Link.getSiteName()));
  request.addPostParameter("sid",sid);
  request.addPostParameter("art","0");
  return request;
}
