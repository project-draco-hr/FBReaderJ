{
  final View view=convertView != null ? convertView : LayoutInflater.from(parent.getContext()).inflate(R.layout.style_item,parent,false);
  final HighlightingStyle style=getItem(position);
  final ImageView colorView=(ImageView)view.findViewById(R.id.style_item_color);
  final TextView titleView=(TextView)view.findViewById(R.id.style_item_title);
  if (style != null) {
    colorView.setVisibility(View.VISIBLE);
    colorView.setImageDrawable(new ColorDrawable(ZLAndroidColorUtil.rgb(style.BackgroundColor)));
    titleView.setText(ZLResource.resource("highlightingStyleMenu").getResource("style").getValue().replace("%s",String.valueOf(style.Id)));
  }
 else {
    colorView.setVisibility(View.GONE);
    titleView.setText(ZLResource.resource("highlightingStyleMenu").getResource("deleteBookmark").getValue());
  }
  return view;
}
