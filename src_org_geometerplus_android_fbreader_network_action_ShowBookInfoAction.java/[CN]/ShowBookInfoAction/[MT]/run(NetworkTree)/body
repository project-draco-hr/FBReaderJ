{
  if (getBook(tree).isFullyLoaded()) {
    showBookInfo(tree);
  }
 else {
    UIUtil.wait("loadInfo",new Runnable(){
      public void run(){
        try {
          getBook(tree).loadFullInformation();
        }
 catch (        ZLNetworkException e) {
          e.printStackTrace();
        }
        myActivity.runOnUiThread(new Runnable(){
          public void run(){
            showBookInfo(tree);
          }
        }
);
      }
    }
,myActivity);
  }
}
