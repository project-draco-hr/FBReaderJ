{
  if (getBook(tree).isFullyLoaded()) {
    showBookInfo(tree);
  }
 else {
    UIUtil.wait("loadInfo",new Runnable(){
      public void run(){
        getBook(tree).loadFullInformation(myLibrary,myNetworkContext);
        myActivity.runOnUiThread(new Runnable(){
          public void run(){
            showBookInfo(tree);
          }
        }
);
      }
    }
,myActivity);
  }
}
