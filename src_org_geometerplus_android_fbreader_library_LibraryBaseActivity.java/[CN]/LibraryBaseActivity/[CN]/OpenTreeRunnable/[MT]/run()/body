{
  final Runnable postRunnable=new Runnable(){
    public void run(){
      startActivity(new Intent(LibraryBaseActivity.this,LibraryTreeActivity.class).putExtra(SELECTED_BOOK_PATH_KEY,mySelectedBookPath).putExtra(TREE_PATH_KEY,myTreePath).putExtra(PARAMETER_KEY,myParameter));
    }
  }
;
  if (LibraryInstance.hasState(Library.STATE_FULLY_INITIALIZED)) {
    postRunnable.run();
  }
 else {
    UIUtil.runWithMessage(LibraryBaseActivity.this,"loadingBookList",new Runnable(){
      public void run(){
        LibraryInstance.waitForState(Library.STATE_FULLY_INITIALIZED);
      }
    }
,postRunnable);
  }
}
