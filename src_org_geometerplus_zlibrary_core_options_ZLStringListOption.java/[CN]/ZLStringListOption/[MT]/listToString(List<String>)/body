{
  if (list == null || list.isEmpty()) {
    return "";
  }
  final StringBuilder builder=new StringBuilder();
  boolean first=true;
  for (  String s : list) {
    if (first) {
      first=false;
    }
 else {
      builder.append(",");
    }
    builder.append(s);
  }
  return builder.toString();
}
