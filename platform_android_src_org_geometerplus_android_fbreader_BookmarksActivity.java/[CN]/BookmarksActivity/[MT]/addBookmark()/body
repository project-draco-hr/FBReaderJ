{
  final FBReader fbreader=(FBReader)FBReader.Instance();
  final ZLTextView textView=fbreader.getTextView();
  final ZLTextWordCursor cursor=textView.getStartCursor();
  if (cursor.isNull()) {
    return;
  }
  final Bookmark bookmark=new Bookmark(fbreader.Model.Book,createBookmarkText(cursor),textView.getModel().getId(),new ZLTextPosition(cursor));
  myThisBookBookmarks.add(0,bookmark);
  AllBooksBookmarks.add(0,bookmark);
  invalidateAllViews();
}
