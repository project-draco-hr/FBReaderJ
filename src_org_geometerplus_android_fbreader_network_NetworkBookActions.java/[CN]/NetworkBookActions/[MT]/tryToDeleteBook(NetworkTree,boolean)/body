{
  final NetworkBookTree bookTree=(NetworkBookTree)tree;
  final NetworkBookItem book=bookTree.Book;
  final ZLResource dialogResource=ZLResource.resource("dialog");
  final ZLResource buttonResource=dialogResource.getResource("button");
  final ZLResource boxResource=dialogResource.getResource("deleteBookBox");
  new AlertDialog.Builder(myActivity).setTitle(book.Title).setMessage(boxResource.getResource("message").getValue()).setIcon(0).setPositiveButton(buttonResource.getResource("yes").getValue(),new DialogInterface.OnClickListener(){
    public void onClick(    DialogInterface dialog,    int which){
      if (!demo) {
        book.removeLocalFiles();
      }
 else {
        final BookReference reference=book.reference(BookReference.Type.DOWNLOAD_DEMO);
        if (reference != null) {
          final String fileName=reference.localCopyFileName();
          if (fileName != null) {
            new File(fileName).delete();
          }
        }
      }
    }
  }
).setNegativeButton(buttonResource.getResource("no").getValue(),null).create().show();
}
