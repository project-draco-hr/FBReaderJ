{
  if (price == null || currency == null) {
    return price;
  }
 else   if (currency.equals("RUB")) {
    return price + " \u0440.";
  }
 else   if (currency.equals("USD")) {
    return "$" + price;
  }
 else   if (currency.equals("EUR")) {
    return "???" + price;
  }
 else   if (currency.equals("JPY")) {
    return "??" + price;
  }
  return currency + " " + price;
}
