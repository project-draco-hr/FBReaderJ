{
  if (Prices.isEmpty()) {
    return null;
  }
 else   if (Prices.size() == 1) {
    return Prices.get(0);
  }
  OPDSPrice price;
  final Locale locale=Locale.getDefault();
  if (locale.getCountry().length() == 2) {
    final String bestCode=Currency.getInstance(locale).getCurrencyCode();
    if (bestCode != null) {
      price=getPrice(bestCode);
      if (price != null) {
        return price;
      }
    }
  }
  price=getPrice("USD");
  if (price != null) {
    return price;
  }
  price=getPrice("EUR");
  if (price != null) {
    return price;
  }
  return Prices.get(0);
}
