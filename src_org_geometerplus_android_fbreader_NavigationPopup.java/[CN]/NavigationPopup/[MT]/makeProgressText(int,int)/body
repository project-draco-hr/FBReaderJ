{
  final StringBuilder builder=new StringBuilder();
  builder.append(page);
  builder.append("/");
  builder.append(pagesNumber);
  final TOCTree tocElement=getReader().getCurrentTOCElement();
  if (tocElement != null) {
    builder.append(" (");
    builder.append(tocElement.getText());
    builder.append(")");
  }
  return builder.toString();
}
