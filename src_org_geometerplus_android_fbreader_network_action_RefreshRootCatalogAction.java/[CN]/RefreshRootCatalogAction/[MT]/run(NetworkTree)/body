{
  UIUtil.wait("updatingCatalogsList",new Runnable(){
    public void run(){
      try {
        NetworkLibrary.Instance().runBackgroundUpdate(true);
      }
 catch (      final ZLNetworkException e) {
        NetworkLibrary.Instance().fireModelChangedEvent(NetworkLibrary.ChangeListener.Code.NetworkError,e.getMessage());
      }
    }
  }
,myActivity);
}
