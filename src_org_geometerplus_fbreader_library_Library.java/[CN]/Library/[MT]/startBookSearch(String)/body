{
  setStatus(myStatusMask | STATUS_SEARCHING);
  final Thread searcher=new Thread("Library.searchBooks"){
    public void run(){
      try {
        searchBooks(pattern);
      }
  finally {
        setStatus(myStatusMask & ~STATUS_SEARCHING);
      }
    }
  }
;
  searcher.setPriority((Thread.MIN_PRIORITY + Thread.NORM_PRIORITY) / 2);
  searcher.start();
}
