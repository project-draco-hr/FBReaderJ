{
  final FBView fbView=myFBReaderApp.getTextView();
  final String text=fbView.getSelectedText();
  final Bookmark bookmark=new Bookmark(myFBReaderApp.Model.Book,fbView.getModel().getId(),fbView.getSelectionStartPosition(),text,true);
  myFBReaderApp.Collection.saveBookmark(bookmark);
  fbView.clearSelection();
  UIUtil.showMessageText(this,ZLResource.resource("selection").getResource("bookmarkCreated").getValue().replace("%s",text));
}
