{
  final String errorMessage=ZLResource.resource("errorMessage").getResource("bookIsMissing").getValue().replace("%s",info.Title);
  final NotificationManager notificationManager=(NotificationManager)getSystemService(NOTIFICATION_SERVICE);
  final PendingIntent pendingIntent=PendingIntent.getActivity(this,0,null,0);
  final Notification notification=new NotificationCompat.Builder(this).setSmallIcon(android.R.drawable.ic_dialog_alert).setTicker(info.Title).setContentTitle(info.Title).setContentText(errorMessage).setContentIntent(pendingIntent).setAutoCancel(true).build();
  notificationManager.notify(0,notification);
}
