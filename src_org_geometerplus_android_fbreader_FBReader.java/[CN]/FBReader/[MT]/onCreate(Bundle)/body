{
  super.onCreate(icicle);
  Instance=this;
  final ZLAndroidApplication application=ZLAndroidApplication.Instance();
  myFullScreenFlag=application.ShowStatusBarOption.getValue() ? 0 : WindowManager.LayoutParams.FLAG_FULLSCREEN;
  getWindow().setFlags(WindowManager.LayoutParams.FLAG_FULLSCREEN,myFullScreenFlag);
  if (myTextSearchPanel == null) {
    myTextSearchPanel=new TextSearchButtonPanel();
    myTextSearchPanel.register();
  }
  if (myNavigatePanel == null) {
    myNavigatePanel=new NavigationButtonPanel();
    myNavigatePanel.register();
  }
}
