{
  tag=tag.toLowerCase();
switch (myDepth) {
case 0:
    if (!tag.equals("config")) {
      printError(tag);
    }
  break;
case 1:
if (tag.equals("group")) {
  myCurrentGroup=attributes.get("name");
}
 else {
  printError(tag);
}
break;
case 2:
if (tag.equals("option")) {
myConfig.setValueDirectly(myCurrentGroup,attributes.get("name"),attributes.get("value"),myCategory);
}
 else {
printError(tag);
}
break;
default :
System.out.println("too many nesting elements! in main");
}
myDepth++;
}
