{
  if (myBooks.hasChildren()) {
    return;
  }
  myIsFullySynchronized=true;
  int count=0;
  for (  ZLFile file : myFiles) {
    if (!file.exists()) {
      continue;
    }
    BookDescription description=BookDescription.getDescription(file);
    if (description != null) {
      myBooks.createBookSubTree(description);
    }
 else {
      myIsFullySynchronized=false;
    }
    if (++count >= LIST_SIZE) {
      break;
    }
  }
}
