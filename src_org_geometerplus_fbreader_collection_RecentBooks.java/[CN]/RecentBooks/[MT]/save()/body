{
  ZLConfig.Instance().executeAsATransaction(new Runnable(){
    public void run(){
      final ZLStringOption option=new ZLStringOption(GROUP,"","");
      int count=0;
      for (      ZLFile file : myFiles) {
        option.changeName(BOOK + count);
        option.setValue(file.getPath());
        ++count;
      }
      option.changeName(BOOK + count);
      option.setValue("");
    }
  }
);
}
