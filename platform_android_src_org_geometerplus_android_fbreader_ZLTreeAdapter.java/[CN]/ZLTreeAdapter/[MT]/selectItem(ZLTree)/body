{
  if (tree == null) {
    return;
  }
  openTree(tree.getParent());
  int index=0;
  while (true) {
    ZLTree<?> parent=tree.getParent();
    if (parent == null) {
      break;
    }
    for (    ZLTree sibling : parent.subTrees()) {
      if (sibling == tree) {
        break;
      }
      index+=getCount(sibling);
    }
    tree=parent;
    ++index;
  }
  if (index > 0) {
    myParent.setSelection(index - 1);
  }
}
