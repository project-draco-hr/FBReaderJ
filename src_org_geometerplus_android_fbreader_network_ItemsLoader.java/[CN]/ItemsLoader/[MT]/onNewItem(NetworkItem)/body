{
synchronized (myItemsMonitor) {
    myItems.add(item);
    myUncommitedItems.add(item);
  }
  myActivity.runOnUiThread(new Runnable(){
    public void run(){
synchronized (myItemsMonitor) {
        updateItems(myItems);
        myItems.clear();
        myItemsMonitor.notifyAll();
      }
    }
  }
);
}
